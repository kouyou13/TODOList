{
  "name": "todo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "fmt": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json,css,py}'",
    "fmt:check": "eslint-config-prettier 'src/**/*.{js,jsx,ts,tsx,json,css,py}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run fmt"
    }
  },
  "dependencies": {
    "prettier": "^3.3.3"
  }
}